#include <iostream>
#include <string>
#include <iomanip>
using namespace std;

float total_venta(float precio, int cantidad);

int main () {
    string dias[5] = {"lunes", "Martes", "Miercoles", "Jueves", "Viernes"};
    float precio, total_diario, total_semana=0;
    int cantidad;

    cout<<"\n---REGISTRO DE VENTAS SEMANALES---\n";

    for (int i=0; i<5; i++) {
        cout<< "\nIngrese la cantidad vendida el " << dias[i] << ":";
        cin>> cantidad;
        cout<< "Ingrese el precio unitario del producto:";
        cin>> precio;

        total_diario=total_venta(precio, cantidad);

        cout << "Total del" << dias [i] << ": $" << fixed << setprecision(2) <<total_diario << endl;

        total_semana += total_diario;
    }

    cout << "\n================================\n";
    cout << "TOTAL DE VENTAS DE LA SEMANA: $"<< fixed <<setprecision (2) << total_semana << endl;
    cout << "==================================\n";

    return 0;
}

float total_venta (float precio, int cantidad) {

    return precio*cantidad;
}
