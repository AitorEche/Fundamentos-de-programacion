#include <stdio.h>

int esFechaValida(int d, int m, int y) {
    if (m < 1 || m > 12 || d < 1) return 0;
    int dias[] = {0,31,28,31,30,31,30,31,31,30,31,30,31};
    // comprobación simple de año bisiesto febrero
    int bis = ( (y%4==0 && y%100!=0) || (y%400==0) );
    if (bis) dias[2] = 29;
    if (d > dias[m]) return 0;
    return 1;
}

int main() {
    int d, m, y;
    printf("Ingrese fecha (dia mes año): ");
    if (scanf("%d %d %d", &d, &m, &y) != 3) return 1;

    if (!esFechaValida(d,m,y)) {
        printf("Fecha invalida.\n");
        return 0;
    }

    // Convertir a un valor comparable: mmdd (ej: 21 marzo -> 321)
    int key = m*100 + d; // ejemplo: 21/03 -> 321

    // Rangos (hemisferio sur) usando mmdd:
    // Otoño: 21 marzo (321) .. 20 junio (620)
    // Invierno: 21 junio (621) .. 20 septiembre (920)
    // Primavera: 21 septiembre (921) .. 20 diciembre (1220)
    // Verano: 21 diciembre (1221) .. 28/29 feb (dos segmentos: 1221..1231 y 101..320)
    if (key >= 321 && key <= 620) {
        printf("Estacion: OTOÑO\n");
    } else if (key >= 621 && key <= 920) {
        printf("Estacion: INVIERNO\n");
    } else if (key >= 921 && key <= 1220) {
        printf("Estacion: PRIMAVERA\n");
    } else {
        // verano: 21/12 .. 31/12 y 01/01 .. 20/03
        printf("Estacion: VERANO\n");
    }
    return 0;
}
