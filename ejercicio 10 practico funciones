#include <iostream>
#include <string>
using namespace std;

void ROMANO(int n) {
    string rom[] = {"M","CM","D","CD","C","XC","L","XL","X","IX","V","IV","I"};
    int val[] = {1000,900,500,400,100,90,50,40,10,9,5,4,1};
    string res = "";
    for (int i = 0; i < 13; i++)
        while (n >= val[i]) {
            n -= val[i];
            res += rom[i];
        }
    cout << "Numero romano: " << res << endl;
}

int main() {
    int n;
    cout << "Ingrese un numero: ";
    cin >> n;
    ROMANO(n);
    return 0;
}
