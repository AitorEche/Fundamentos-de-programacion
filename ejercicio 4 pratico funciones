#include <iostream>
#include <cmath>
using namespace std;

long long FAC(int n) {
    long long f = 1;
    for (int i = 1; i <= n; i++) f *= i;
    return f;
}

double serie(double x, int n) {
    double s = 0;
    int signo = 1;
    for (int i = 1; i <= n; i += 2) {
        s += signo * (pow(x, i) / FAC(i));
        signo *= -1;
    }
    return s;
}

int main() {
    double x; int n;
    cout << "Ingrese X y N: ";
    cin >> x >> n;
    cout << "Resultado: " << serie(x, n) << endl;
    return 0;
}
